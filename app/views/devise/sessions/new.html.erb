<section id="title" class="emerald seccion1">
  <br><br><br><br>
 <div class="container">
   <div class="row">
    <div class="col-sm-6">
      <h1>Log in</h1>
    </div>
    <div class="col-sm-6">
      <ul class="breadcrumb pull-right">
        <li><%= link_to 'Inicio', root_path %></li>
        <li class="active">Sesiones</li>
      </ul>
    </div>
  </div>
</div>
</section>
<br><br>
<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal'}) do |f| %>
<fieldset style="align:center">
  
  <div class="form-group">
       <span class="col-md-1 col-md-offset-3 text-center"><i class="fa fa-envelope-o bigicon"></i><br>Correo*</span>
           <div class="col-md-8">
               <%= f.email_field :email , autofocus: true , class: "form-control",style:" width: 300px;" %>                  </div>
    </div>
  
<div class="form-group">
       <span class="col-md-1 col-md-offset-3 text-center"><i class="fa fa-key bigicon"></i><br>Contrase√±a*</span>
           <div class="col-md-8">
               <%= f.password_field :password, autocomplete: "off" , class: "form-control",style:" width: 300px;" %>                  </div>
    </div>
  
  

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="col-md-2 col-md-offset-5 actions" >
  <%= f.submit "Log in", class:"btn btn-lg btn-success" %>
       
      </div> 
</fieldset>
<% end %>



