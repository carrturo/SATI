<%= form_for(@feedback, html: { class: 'form-horizontal'}) do |f| %>
<fieldset>
  <% if @feedback.errors.any? %>
    <div id="error_explanation" style="align:center">
      <h2>Error al enviar la Sugerencia</h2>

      <ul>
      <% @feedback.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <span class="col-md-1 col-md-offset-3 text-center"><i class="fa fa-keyboard-o bigicon"></i>    <br>Edad*</span>
    <div class="col-md-8">
      <%= f.number_field :age , class: "form-control",style:" width: 500px;" %>
    </div>
  </div>
  
  <div class="form-group">
    <span class="col-md-1 col-md-offset-3 text-center"><i class="fa fa-user bigicon"></i><br>TÃ­tulo*</span>
    <div class="col-md-8">
      <%= f.text_field :title , autofocus: true , class: "form-control",style:" width: 500px;" %>                  
    </div>
  </div>
  
  <div class="form-group">
    <span class="col-md-1 col-md-offset-3 text-center"><i class="fa fa-bars bigicon"></i>Mensaje*</span>
      <div class="col-md-8">
        <%= f.text_area :message, class: "form-control", style:" width: 500px; height:200px" %>       </div>
  </div>
  
  <br>
  
  <div class="col-md-2 col-md-offset-5 actions" >
    <%= f.submit "Aceptar", class:"btn btn-lg btn-success" %>
  </div>
  
</fieldset>

<% end %>
