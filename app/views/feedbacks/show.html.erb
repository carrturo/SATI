  <div class="form-group">
    <span class="col-md-1 col-md-offset-4 text-center"><i class="fa fa-keyboard-o bigicon"></i>    <br>Edad:</span>
    <div class="col-md-2">
      <h3><%= @feedback.age%></h3>
    </div>
  </div>
  <br>
   <div class="form-group">
    <span class="col-md-1 col-md-offset-4 text-center"><i class="fa fa-bars bigicon"></i>Mensaje:</span>
      <div class="col-md-2">
        <h3><%= @feedback.message%></h3>  
      </div>
  </div>
 <br>
   <div class="form-group">
    <span class="col-md-1 col-md-offset-4 text-center"><i class="fa fa-calendar bigicon"></i><br>Fecha de envio:</span>
      <div class="col-md-2">
        <h3><%= @feedback.created_at.in_time_zone('Central America').strftime("%d/%h/%Y %H:%M") %></h3>  
      </div>
  </div>
  
  
</form>  

