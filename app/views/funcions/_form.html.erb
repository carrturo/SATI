<br><br>
<%= form_for(@funcion , html: { class: 'form-horizontal'}) do |f| %>
<fieldset>  
  <% if @funcion.errors.any? %>
    <div id="error_explanation">
      <h2>Error al guardar Funci√≥n</h2>

      <ul>
      <% @funcion.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="form-group">
       <span class="col-md-1 col-md-offset-3 text-center"><i class="fa fa-clock-o bigicon"></i><br>Hora*</span>
           <div class="col-md-8">
             <%= f.datetime_select :hora , autofocus: true , class: "form-control" %>                  </div>
   </div>
  
     <div class="form-group">
       <span class="col-md-1 col-md-offset-3 text-center"><i class="fa fa-bars bigicon"></i>Comentario*</span>
           <div class="col-md-8">
             <%= f.text_field :comentario, class: "form-control",style:" width: 500px; height:150px" %>                                  </div>
   </div>
    
   <div class="form-group">
       <span class="col-md-1 col-md-offset-3 text-center"><i class="fa fa-circle-o-notch bigicon"></i><br>Estado*</span>
           <div class="col-md-8">
             <%= f.select :state, options_for_select(%w[Activo Inactivo]) %>                                   </div>
   </div>

  <div class="col-md-2 col-md-offset-5 actions" >
  <%= f.submit "Aceptar", class:"btn btn-lg btn-success" %>
       
      </div> 
 </fieldset>  
<% end %>
