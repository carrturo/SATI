<section id="title" class="emerald seccion1">
  <br><br><br><br>
 <div class="container">
   <div class="row">
    <div class="col-sm-6">
      <h1>Registrarse</h1>
    </div>
    <div class="col-sm-6">
      <ul class="breadcrumb pull-right">
        <li><%= link_to 'Inicio', root_path %></li>
        <li class="active">Sesiones</li>
      </ul>
    </div>
  </div>
</div>
</section>
<br><br>

<%= form_for(@user, url: create_user_path, html: { class: 'form-horizontal'}) do |f| %>
<fieldset>
 

  <div class="form-group">
       <span class="col-md-1 col-md-offset-3 text-center"><i class="fa fa-envelope-o bigicon"></i><br>Correo*</span>
           <div class="col-md-8">
               <%= f.email_field :email , autofocus: true , class: "form-control",style:" width: 300px;" %>                  </div>
    </div>
  
  <div class="form-group">
       <span class="col-md-1 col-md-offset-3 text-center"><i class="fa fa-key bigicon"></i><br>Contraseña*</span>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />

           <div class="col-md-8">
               <%= f.password_field :password, autocomplete: "off" , class: "form-control",style:" width: 300px;" %>                  </div>
    </div>

  <div class="form-group">
       <span class="col-md-1 col-md-offset-3 text-center"><i class="fa fa-unlock-alt bigicon"></i><br>Confirmar contraseña*</span>
           <div class="col-md-8">
               <%= f.password_field :password_confirmation, autocomplete: "off" , class: "form-control",style:" width: 300px;" %>                  </div>
    </div>
  
 <div class="form-group">
       <span class="col-md-1 col-md-offset-3 text-center"><i class="fa fa-user bigicon"></i><br>Rol*</span>
           <div class="col-md-8">
               <%= f.collection_select(:role_id, Role.all, :id, :name) %>                  </div>
    </div>

 

   <div class="col-md-2 col-md-offset-5 actions" >
     <%= f.submit "Crear cuenta", class:"btn btn-lg btn-success" %>
       
      </div> 
</fieldset>
<% end %>
