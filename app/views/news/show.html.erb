<div class="container">
  <div class="row">
    <div class="col-lg-3 col-md-3 col-sm-4 col-xs-12">
				<div id="sidebar">
					<div class="sosmed">
						</div>
					<div class="user">
						<div class="text-center">
               <%=image_tag("logoArtMemola.png",:width =>270, :height =>220) %>
					  </div>
						<div class="user-head">
              <br>
              <div class="hr-center"></div>
              <h1 style="font-size:40px">Noticias</h1>
							<div class="hr-center"></div>
              <br>
           
						</div>
					</div>
					
				</div>
			</div>
    <div class="col-lg-9 col-md-9 col-sm-8 col-xs-12">
				<div id="content">
					<!-- start:main content -->
					<div class="main-content">
            
            <ul class="timeline">
							<!-- start:profile -->
							<li id="id-profile">
								<div class="timeline-badge default"><i class="fa fa-user" data-original-title="" title=""></i></div>
                <h1 class="timeline-head"><%= @news.title %></h1>
							</li>
              
					          <li id="personal-info">
					          	<div class="timeline-badge primary"></div>
					          	<div class="timeline-panel">
					          		<div>
              <%= cl_image_tag(@news.picture, :alt => "imagen", :width =>"100%", :height =>"180px") %>
                    </div>
                        <br>
                         <small><i class="fa fa-calendar" data-original-title="" title=""></i>
                           <%= @news.date%>                        
                        </small>
                        <div class="hr-left"></div>
                         
                        <p> <%= @news.text %> </p>
                  </div>
					        </li>
                            
					        <!-- end:profile -->

					    </ul>
					</div>
					<!-- end:main content -->
				</div>
			</div>
  
    
  </div>
  
</div>