<div class="container">
  <div class="row">
    <div class="col-lg-3 col-md-3 col-sm-4 col-xs-12">
				<div id="sidebar">
					<div class="sosmed">
						<div class="text-center">
							<a href="#"><i class="fa fa-youtube fa-2x" data-toggle="tooltip" data-placement="top" title="" data-original-title="Facebook"></i></a>
          </div>
					</div>
					<div class="user">
						<div class="text-center">
					  </div>
						<div class="user-head">
              <h1 style="font-size:70px"><%= @play.title%></h1>
              <br>
							<div class="hr-center"></div>
              <br>
              <h5 style="font-size:40px"><%= @play.state %></h5>
              <br>
              <div class="hr-center"></div>
						</div>
					</div>
					
				</div>
			</div>
    <div class="col-lg-9 col-md-9 col-sm-8 col-xs-12">
				<div id="content">
					<!-- start:main content -->
					<div class="main-content">
            <div>
              <%= cl_image_tag(@play.picture, :alt => "imagen", :width =>"100%", :height =>"100%") %>
            </div>
            <br><br><br>
						<ul class="timeline">
							<!-- start:profile -->
							<li id="id-profile">
								<div class="timeline-badge default"><i class="fa fa-user" data-original-title="" title=""></i></div>
								<h1 class="timeline-head">Informacion</h1>
							</li>
					          <li id="personal-info">
					          	<div class="timeline-badge primary"></div>
					          	<div class="timeline-panel">
					          		<h1>Detalles de la obra</h1>
					          		<div class="hr-left"></div>

					          		<div class="btn-group">
									  	<button type="button" disabled="" class="btn btn-primary">Nombre</button>
                          <button type="button" disabled="" class="btn btn-default"><%= @play.title%></button>
									</div>
									<div class="btn-group">
									  	<button type="button" disabled="" class="btn btn-primary">Duracion</button>
                    <button type="button" disabled="" class="btn btn-default"><%= @play.duration %>
                      </button>
									</div>
									<div class="btn-group">
									  	<button type="button" disabled="" class="btn btn-primary">Presentada hasta</button>
                      <button type="button" disabled="" class="btn btn-default"><%= @play.end_date %></button>
									</div>
                  
                  <div class="btn-group">
									  	<button type="button" disabled="" class="btn btn-primary">Presentada hasta</button>
                      <button type="button" disabled="" class="btn btn-default"><%= @play.end_date %></button>
									</div>      
								  
                 <div class="btn-group">
									  	<button type="button" disabled="" class="btn btn-primary">Genero</button>
                   <button type="button" disabled="" class="btn btn-default">  
                     <%= @play.generos.map { |genero| genero.nombre}.join(' , ') %>
                   </button>
									</div>
                  
                  <div class="btn-group">
									 <button type="button" disabled="" class="btn btn-primary">Funciones</button>
                   <button type="button" disabled="" class="btn btn-default">
                    <%= @play.funcions.map { |funcion| funcion.hora.strftime("%H:%M") }.join(' | ') %> 
                   </button>
									</div>
                 
                
                        
					          	</div>
					        </li>
                            <li id="profile">
					          	<div class="timeline-badge primary"></div>
					          	<div class="timeline-panel">
					          		<h1>Sinopsis</h1>
					          		  <div class="hr-left"></div>
					             <p> <%= @play.summary %> </p>
					          	</div>
					        </li>
					        <!-- end:profile -->

					       
					        <!-- start:blog -->
					        <li id="id-blog">
					        	<div class="timeline-badge default"><i class="fa fa-comments" data-original-title="" title=""></i></div>
					        	<h1 class="timeline-head">Reparto</h1>
					        </li>
                     <% @play.actors.each do |actor| %>
                          <li>
					          	<div class="timeline-badge primary"></div>
					          	<div class="timeline-panel">
					          		<div class="row" id="blog">
					          			<div class="col-md-7 col-sm-6 col-xs-12">
					          				<div class="blog-content">
                              <h3><%= link_to actor.name, actor_path(actor) %></h3>
					          					<p><%= actor.biography %></p>
					          				</div>
					          			</div>
					          			<div class="col-md-5 col-sm-6 col-xs-12">
                            <%= cl_image_tag(actor.picture, :alt => "imagen",class: "img-responsive") %>
					          			</div>
					          		</div>
					          	</div>
					        </li>
              
                      <% end %>
                <!-- end:blog -->

					        
					    </ul>
					</div>
					<!-- end:main content -->
				</div>
			</div>
  
    
  </div>
  
</div>
